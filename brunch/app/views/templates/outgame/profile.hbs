<!--MAIN BLOCK-->
<div class='background'>
<!--HEADER BLOCK-->
  <div class="header">
    <a href="#home" class="home-btn"></a>
  </div>
  <div class='picture-container'>
      <div class='picture'
      {{#if is_linked }}
        style='background-image: url(https://graph.facebook.com/{{fb_id}}/picture?width=151&height=151)'
      {{/if}}
      ></div>
    <div class='name resize'>{{user.username}}</div>
  </div>
  <div class='personal-info'>
    <div id='level'>
      <div class='title'>Niveau</div>
      <div class='value'>{{user.rank}}</div>
    </div>
    <div id='score'>
      <div class='title'>Score</div>
      <div class='value'>{{niceNumber stats.game_week_score}}</div>
    </div>
  </div>
  <div class='buttons'>
    <a href="#hall-of-fame/profile" class='hall-of-fame'></a>
    {{#if gamecenter}}
      <div class='game-center'></div>
    {{/if}}
  </div>
  <div class='stats'>
    <div class='stat1'>
      <table>
        <tbody>
            <tr>
              <th>El&eacute;ment</th>
              <th>Valeur</th>
            </tr>
          {{#each stats}}
            <tr>
              <td class='left'>{{text}}</td>
              <td class='value'>{{number}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    <div class='stat2'>
      <table>
        <tbody>
            <tr>
              <th>Sport</th>
              <th>Bonne r&eacute;ponse</th>
            </tr>
          {{#each sports}}
            <tr>
              <td class='left'>{{text}}</td>
              {{#if number}}
                <td class='value'>{{number}}%</td>
              {{else}}
                <td class='value'>Joue plus !</td>
              {{/if}}
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>

<div id='right-block'>
  <div class="informations">
    <div class="cash">
      <div class='cash-value'>{{user.credits}}</div>
      <div class="cash-icone"></div>
    </div>
    <div class="lifes">
      <div class="lifes-value">{{user.health}}</div>
      <div class="lifes-icone"></div>
    </div>
  </div>
  <!--BONUS BLOCK-->
  <div class='bonus'>
    {{#each bonus}}
      <a href='#shop' class='elem {{name}}'>
        <div class='number'>{{quantity}}</div>
      </a>
    {{/each}}
  </div>
</div>
