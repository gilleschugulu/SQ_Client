<!-- HEADER BLOCK BEGIN -->
<a href="#home" class="home-btn"></a>
<div class='tabs-container'>
  <div class='tab active' id='credits'>Jetons</div>
  <div class='tab inactive' id='bonuses'>Bonus &amp; Vies</div>
</div>

<div id='numbers'>
  <span id='hearts' class='number'>{{health}}</span>
  <span id='heart-icon' class='icon'></span>
  <span id='credits' class='number'>{{credits}}</span>
  <span id='credit-icon' class='icon'></span>
</div>

<div class="clearfix"></div>


<div class='tab-container'>

  <!-- CREDITS CONTENT BLOCK BEGIN -->
  <div class="content-container" id='credits'>
    {{#each packs.credit_packs}}
      <a class="paid-pack first-offer {{../packs.type}} pack" data-id="{{product_id}}">
        <span class='marker'>+</span>
        <span class='value'>{{value}}</span>
        <span class='credit-icon'></span>
        <span class='price'>{{price}} â‚¬</span>
      </a>
    {{/each}}
    <div></div>
    {{#each packs.free_packs}}
      {{#unless disabled}}
        <a class="free-pack pack" id="{{name}}">
          <span class='text'>{{text}}</span>
          <span class='value'>+{{value}}</span>
          <span class='credit-icon'></span>
        </a>
      {{/unless}}
    {{/each}}
  </div>


  <!-- BONUSES CONTENT BLOCK BEGIN -->
  <div class="content-container" id='bonus' style='display: none'>
    <div class='life-container'>
      {{#each packs.life_packs}}
        <div class="life-pack" data-position='{{@index}}'>
          <span class='value'>{{value}}</span>
          <span class='heart-icon'></span>
          <span class='price'>{{price}}</span>
          <span class='credit-icon'></span>
        </div>
      {{/each}}
    </div>
    <div id='bonus-packs'>
      {{#each packs.bonus_packs}}
        <div data-position='{{@index}}' class='bonus-pack'>
          <div class='value'>X {{value}}</div>
          <div class='price'>{{price}}</div>
          <span class='credit-icon'></span>
        </div>
      {{/each}}
    </div>
  </div>

</div>