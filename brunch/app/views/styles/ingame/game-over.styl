@import 'nib'
@import '../mixins.styl'

#iphone5bg
  &.game-over-page-568h
    background-image: url("../images/common/background.png")
    background-size: 100% 100%

#global-container
  &.iphone5
    .game-over
      background: none
      .home-btn
        left: -6%

.game-over
  width: 100%
  height: 100%
  background-image: url("../images/common/background.png")
  background-size: 100% 100%
  position: relative
  .header-container
    width: 100%
    height: 11%
    position: absolute
    .home-btn
      width: 7.4%
      height: 100%
      display: inline-block
      background-image: url('../images/common/home.png')
      background-repeat: no-repeat
      background-size: contain
      relative: top 15% left 0.7%
  #header-title
    absolute: top -0.3% left 30%
    width: 40%
    height: 15%
    margin: 0 auto
    background-image: url('../images/game-over/title.png')
    background-repeat: no-repeat
    background-size: contain
  .content-container
    relative: top 12% left 0
    width: 88.6%
    height: 84.8%
    background-size: 100% 100%
    background-repeat: contain
    margin: 0 auto
    padding: 8.5% 2% 0 2%
    background-image: url('../images/game-over/small-background.png')
    .title
      width: 95%
      height: 20%
      text-align: center
      margin: 0 auto
      font: 1.8em dax
      color: black
      .jetons
        display: block
        width: 6.5%
        height: 30%
        relative: left 2% top 0
        background-image: url('../images/home/common/credit.png')
        background-size: contain
        background-repeat: no-repeat
      .jetons-number
        color: #D80505

    .blocks-container
      width: 86%
      height: 45%
      margin: -3% auto 0
      position: relative
      padding: 1%
      .block
        position: absolute
        width: 41%
        &.stats
          top: 20%
          left: 50%
          height: 90%
          table
            width: 100%
            height: 100%
            .name
              font-family: ramblabold
            .number
              color: #D80505
              font: 1.3em ramblabold
        &.jackpot
          top: 20%
          height: 90%
          .title
            relative: left 10% top 0
            width: 66%
            height: 24%
            background-image: url('../images/game-over/score.png')
            background-size: contain
            background-repeat: no-repeat
          .value
            relative: left 7% top 0
            width: 100%
            text-align: center
            color: black
            font: 1.7em grilled
          .bonus
            display: inline-block
            margin-left: 5%
            &.hide
              opacity: 0
        &.best-jackpot
          top: 70%
          height: 90%
          .title
            relative: left 10% top 0
            width: 66%
            height: 24%
            background-image: url('../images/game-over/score.png')
            background-size: contain
            background-repeat: no-repeat
          .value
            relative: left 7% top 0
            width: 100%
            text-align: center
            color: black
            font: 1.7em grilled
            .bonus
              display: inline-block
              margin-left: 5%
              &.hide
                opacity: 0

    .replay-btn
      width: 33.8%
      height: 18.7%
      background-image: url('../images/game-over/replay.png')
      background-size: contain
      background-repeat: no-repeat
      display: block
      margin: 6% auto 0 auto
      &:active
        background-image: url('../images/game-over/replay_a.png')
