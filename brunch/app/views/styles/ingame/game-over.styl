@import 'nib'
@import '../mixins.styl'

.game-over
  width: 100%
  height: 100%
  background-image: url("../images/options/background.jpg")
  background-size: 100% 100%
  position: relative
  .header-container
    width: 100%
    height: 11%
    position: relative
    .home-btn
      width: 7.4%
      height: 100%
      display: inline-block
      background-image: url('../images/common/home.png')
      background-repeat: no-repeat
      background-size: contain
      relative: top 15% left 0.7%
  .content-container
    width: 88.6%
    height: 84.8%
    background-size: 100% 100%
    background-repeat: contain
    margin: 0 auto
    padding: 8.5% 2% 0 2%
    &.sucess
      background-image: url('../images/game-over/popup_victoire.png')
    &.lost
      background-image: url('../images/game-over/popup.png')
    .title
      width: 95%
      height: 20%
      text-align: center
      margin: 0 auto 0 auto
      font: 1.8em dax
      color: #fff
      stroke: #421989
      .jetons
        color: #F4C827
        stroke: #42226C
        padding-right: 6%
        background-image: url('../images/shop/jeton.png')
        background-size: contain
        background-position: right center
        background-repeat: no-repeat
    .blocks-container
      width: 86%
      height: 50%
      margin: 0 auto
      position: relative
      padding: 1%
      .block
        float: left
        position: relative
        width: 45.2%
        height: 100%
        margin-right: 9%
        .value
          width: 59%
          text-align: right
          relative: top 53% left 7%
          display: block
        &.rank
          margin-right: 0
          .rank-image
            width: 34%
            height: 49.15%
            absolute: top 45% left 10%
          .rank-text
            width: 43%
            height: 50%
            absolute: top 45% right 10%
            text-align: center
            font: 1.7em grilled
            color: #81009D
        &.jackpot
          .value
            color: #F4C827
            stroke: #42226C
            font: 1.7em grilled
    .replay-btn
      width: 33.8%
      height: 18.7%
      background-image: url('../images/game-over/rejouer.png')
      background-size: contain
      background-repeat: no-repeat
      display: block
      margin: 2% auto 0 auto
      &:active
        background-image: url('../images/game-over/rejouer_a.png')
