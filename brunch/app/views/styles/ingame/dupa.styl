#countdown
  absolute: top 0% left 0%
  width: 100%
  height: 100%
  z-index: 5000
  background-color: rgba(0, 0, 0, 0.4)
  #countdown-container
    relative: top 26%
    margin: 0 auto
    width: 13.7em
    height: 13.7em
    background-color: #c5020d
    border-radius: 50%
    #countdown-value
      font-family: open_sansextrabold
      color: #fff
      font-size: 0em
      overflow: hidden
      // stroke(black)
      width: 100%
      height: 100%
      padding-top 45%
      text-align: center
      &.big
        transition: all 0.2s ease
        font-size: 6em
        padding-top: 15%

.dupa-stage
  position: relative
  width: 100%
  height: 100%
  background-image: url('../images/common/background.png')
  background-size: 100% 100%
  color: white
  .btn-menu
    absolute: top 1% left 1%
    width: 8%
    height: 11%
    display: inline-block
    background-image: url('../images/ingame/bt_home.png')
    background-repeat: no-repeat
    background-size: contain
    cursor: pointer

  .chrono-container
    absolute: top 17% left 1.5%
    width: 6%
    height: 81%
    background-image: url("../images/ingame/timer.png")
    background-repeat: no-repeat
    background-size: 100% 100%
    font-family: grilled
    .chrono-chrono
      absolute: top -5.5% left 9%
      width: 82%
      height: 20%
      background-image: url("../images/ingame/timer_chrono.png")
      background-repeat: no-repeat
      background-size: contain
      z-index: 3
    .chrono-time
      absolute: top 13% left 12%
      z-index: 3
      width: 75%
      text-align: center
    .chrono-filler-container
      absolute: bottom 1.4% left 8%
      width: 83%
      height: 97.4%
      z-index: 2
      overflow: hidden
      .chrono-filler
        position: absolute
        top: 0%
        width: 100%
        height: 100%
        background-image: linear-gradient(red, orange, yellow, green)
        background-size: contain
        transition: top linear 1s

    @media screen and (min-width: 1024px)
      .chrono-filler-container
        absolute: bottom 1.4% left 9.7%

  .question-container
    absolute: top 7% left 10%
    width: 76%
    height: 71%

    .question-photo
      relative: top 5% left 1%
      width: 13.85em
      height: 93%
      float: left
      background-image: url("http://www.karim-benzema.net/wp-content/uploads/2009/06/une_lequipe.jpg")
      background-repeat: no-repeat
      background-size: 100% 100%
      border-radius: 0.5em

    .question-theme-container
      relative: top 4% left 3%
      width: 55%
      height: 8%
      float: left
      .question-theme, .question-theme-ghost
        background-color: #d20b0b
        padding: 0.2em 0.8em
        height: 100%
        font-family: speedregular
        text-align: center
        float: left
        transition: all 0.15s ease
        &.hidden-text
          color: rgba(255, 255, 255, 0)

      .question-theme-ghost
        visibility: hidden
        absolute: left 0 top 0

      .question-theme-right
        background-image: url("../images/ingame/title_right.png")
        background-repeat: no-repeat
        background-size: contain
        width: 2.2em
        height: 100%
        float: left


    .question-content-container
      relative: top 3.7% left 3%
      width: 56%
      height: 30%
      float: left
      background-color: rgba(0,0,0,0.85)
      border-radius: 0 0.5em 0.5em
      .question-content
        relative: top 3% left 3%
        width: 94%
        height: 94%
        font-family: ramblabold

    .question-propositions-container
      relative: top 7% left 2.5%
      width: 58%
      height: 60%
      float: left

      .proposition-container
        relative: top 5% left 0%
        width: 45%
        height: 36%
        margin: 2.5%
        float: left
        cursor: pointer
        &.animated
          animation-duration: 250ms
        &.success
          .proposition
            .part
              &.mid
                background-image: url("../images/ingame/propositions/green_center.png")
              &.left
                background-image: url("../images/ingame/propositions/green_left.png")
              &.right
                background-image: url("../images/ingame/propositions/green_right.png")
        &.error
          .proposition
            .part
              &.mid
                background-image: url("../images/ingame/propositions/red_center.png")
              &.left
                background-image: url("../images/ingame/propositions/red_left.png")
              &.right
                background-image: url("../images/ingame/propositions/red_right.png")

        .massOpinion
          absolute: top -16% right -9%
          width: 29%
          height: 37%
          border-radius: 0.5em
          line-height: 200%
          text-align: center
          background: #c50000
          display: none
          font-family: grilled

        .proposition
          width: 100%
          height: 100%
          &.animated
            animation-duration: 300ms
          .part
            float: left
            background-size: 100% 100%
            background-repeat: no-repeat
            height: 100%
            &.left
              width: 0.45em
              background-image: url("../images/ingame/propositions/grey_left.png")
            &.right
              width: 0.7em
              background-image: url("../images/ingame/propositions/grey_right.png")
            &.mid
              text-align: center
              font-family: ramblabold
              width: 86%
              background-image: url("../images/ingame/propositions/grey_center.png")


  .bonus-container
    absolute: top 83% left 13%
    width: 75%
    height: 17%
    background-image: url("../images/ingame/box_bonus.png")
    background-repeat: no-repeat
    background-size: contain
    .bonus
      relative: top 17% left 6%
      float: left
      height: 61%
      width: 13.6%
      margin: 1% 2%
      cursor: pointer
      background-repeat: no-repeat
      background-size: contain
      .quantity
        relative: top -10% left 76%
        width: 35%
        height: 47%
        border-radius: 400%
        line-height: 170%
        text-align: center
        background: #c50000
        font-family: grilled

  .jackpot-container
    absolute: top 2% left 85%
    width: 15%
    height: 96%
    font-family: grilled
    #total-jackpot
      background-image: url("../images/ingame/box_score.png")
      background-repeat: no-repeat
      background-size: contain
      z-index: 50
      margin: 0 auto
      font-size: 1.4em
      width: 91%
      height: 8.5%
      text-align: center
      padding-top: 7%
      absolute: top 2% left 3%

    // Default
    #threshold-container
      z-index: 1
      width: 56%
      height: 93%
      absolute: top 10% left 21%
      .threshold
        width: 100%
        height: 9.5%
        padding-top: 18%
        z-index: 1
        color: #75634e
        border-right: 0.2em solid #b3b3b3
        border-left: 0.2em solid #b3b3b3
        border-bottom: 0.1em solid #5f5f5f
        background-repeat: no-repeat
        background-size: 100% 100%
        background-image: url("../images/ingame/threshold_box.png")
        text-align: center
        &:nth-child(0)
          border-top: 0.2em solid #b3b3b3
        &:nth-last-child(1)
          border-bottom: 0.2em solid #b3b3b3
        &.highlighted
          z-index: 5
          color: #f9e4f3
          background-image: none
          background-color: red
          box-shadow: 0 0 0.8em 0.1em #000 inset
        &.gold
          box-shadow: 0 0 0.8em 0.1em #000 inset
          background-image: none
          background-color: rgb(255, 214, 0)
          color: #744141

    #jackpot-marker
      absolute: top 91% left 56%
      width: 45%
      height: 7%
      z-index: 50
      background-image: url("../images/ingame/repere.png")
      background-repeat: no-repeat
      background-size: contain
      transition: top ease-in 300ms
      animation-delay: -.3s
      animation-duration: 1.2s
      &.gold
        background-image: url("../images/ingame/gold_repere.png")
