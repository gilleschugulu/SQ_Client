@import 'nib'
@import '../mixins.styl'

.dupa-stage
  position: relative
  width: 100%
  height: 100%
  background-image: url('../images/common/background.png')
  color: white

  .btn-menu
    absolute: top 1% left 6%
    width: 8%
    height: 11%
    display: inline-block
    background-image: url('../images/ingame/bt_home.png')
    background-repeat: no-repeat
    background-size: contain
    cursor: pointer

  .chrono-container
    absolute: top 14% left 7%
    width: 6%
    height: 83%
    background-image: url("../images/ingame/timer.png")
    background-repeat: no-repeat
    background-size: contain
    .chrono-time
      absolute: top 13% left 12%
      z-index: 3
    .chrono-filler-container
      absolute: bottom 1% left 8%
      width: 68%
      height: 92%
      z-index: 2
      .chrono-filler
        absolute: bottom 0%
        width: 100%
        height: 100%
        background-image: url("../images/ingame/timer_in.png")
        background-repeat: no-repeat
        background-size: 100% 100%

  .question-container
    absolute: top 7% left 16%
    width: 68%
    height: 71%

    .question-photo
      relative: top 5% left 1%
      width: 45%
      height: 93%
      float: left
      background-image: url("../images/ingame/photo.png")
      background-repeat: no-repeat
      background-size: contain

    .question-theme
      relative: top 4% left 3%
      width: 30%
      height: 8%
      float: left
      background-image: url("../images/ingame/title.png")
      background-repeat: no-repeat
      background-size: contain

    .question-content
      relative: top 3.7% left 3%
      width: 50%
      height: 30%
      float: left
      background-image: url("../images/ingame/box_question.png")
      background-repeat: no-repeat
      background-size: contain

    .question-propositions-container
      relative: top 7% left 2%
      width: 54%
      height: 60%
      float: left

      .proposition
        relative: top 5% left 0%
        width: 43%
        height: 36%
        margin: 3%
        float: left
        cursor: pointer
        background-image: url("../images/ingame/answer.png")
        background-repeat: no-repeat
        background-size: 100% 100%
        .resize
          overflow: hidden !important
        .massOpinion
          absolute: top -16% right -13%
          width: 35%
          height: 37%
          border-radius: 20%
          line-height: 145%
          text-align: center
          background: #c50000
          display: none


  .bonus-container
    absolute: top 83% left 13%
    width: 75%
    height: 17%
    background-image: url("../images/ingame/box_bonus.png")
    background-repeat: no-repeat
    background-size: contain
    .bonus
      relative: top 17% left 6%
      float: left
      height: 61%
      width: 13.6%
      margin: 1% 2%
      cursor: pointer
      background-repeat: no-repeat
      background-size: contain
      .quantity
        relative: top -10% left 76%
        width: 35%
        height: 47%
        border-radius: 400%
        line-height: 145%
        text-align: center
        background: #c50000

  .jackpot-container
    absolute: top 2% left 83%
    width: 15%
    height: 96%
    background-image: url("../images/ingame/score.png")
    background-repeat: no-repeat
    background-size: contain
    #total-jackpot
      relative: top .8% left 2%
      width: 95%
      height: 8%
      text-align: center
      padding: 7% 0
    .threshold
      relative: top 1% left 26.5%
      width: 45.3%
      height: 9.01%
      color: #75634e
      text-align: center
      padding: 10% 0
      &.highlighted
        background-image: url("../images/ingame/timer_in.png")
        background-repeat: no-repeat
        background-size: contain
        color: #f9e4f3
    #jackpot-marker
      absolute: top 91% left 68%
      width: 45%
      height: 7%   
      background-image: url("../images/ingame/repere.png")
      background-repeat: no-repeat
      background-size: contain