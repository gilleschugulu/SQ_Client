@import 'nib'
@import 'mixins'

#iphone5bg
  &.profile-page-568h
    background-repeat: no-repeat
    background-image: url("../images/common/background.png")
    background-size: 100% 100%

#global-container
  &.iphone5
    .profile-page
      .background
        background: none
      .home-btn
        left: -8%
      #right-block
        right: -9.5%
      .bonus
        right: 20%
      .picture-container
        margin-left: 6%
      .personal-info
        left: 31%
      .stats
        left: -9%
        width: 105%
        div
          margin-top: 7%
          margin-left: 7%
          table
            width: 98%
        .stat1
          width: 43%
        .stat2
          width: 37%


.profile-page
  width:100%
  height:100%
  position:relative
  font-family: ramblabold
  font-size: 1.1em
  .background
    width:100%
    height:100%
    position: absolute
    background-repeat: no-repeat
    background-image: url("../images/common/background.png")
    background-size: 100% 100%
    .picture-container
      height: 35%
      width: 21%
      display: inline-block;
      margin-left: 14%
      margin-top: 4.5%
      background-image: url(../images/profile/photo_pseudo.png)
      background-repeat: no-repeat
      background-size: contain
      .picture
        relative: top 0.6% left 14.2%
        height: 73.8%;
        width: 73.3%;
        background-size: contain
        background-repeat: no-repeat
      .name
        width: 90%
        height: 25%
        margin: auto
        text-align: center
        font-size: 1.3em
      .facebook-link
        display: inline-block
        width: 65%
        height: 50%
        margin-top: 20%
        margin-left: 21%
        background-size: contain
        background-repeat: no-repeat
        background-image: url('../images/profile/linkfb.png')

    .personal-info
      font-family: grilled
      display: inline-block
      height: 26%
      width: 25%
      absolute: top 15% left 37%
      padding-top: 4%
      background-image: url(../images/profile/levelscore.png)
      background-repeat: no-repeat
      background-size: contain
      .level
        text-align: center
        width: 36%
        font-size: 1.5em
        color: #c50000
        display:inline-block
      .score
        text-align: center
        width: 60%
        display: inline-block
    .buttons
      display: inline-block
      height: 35%
      width: 20%
      absolute: right 16% top 10%
      .hall-of-fame
        display: inline-block
        height: 40%
        width: 90%
        background-size: contain
        background-repeat: no-repeat
        background-image: url('../images/profile/bt_ranking.png')
      .game-center
        display: inline-block
        height: 40%
        width: 90%
        background-size: contain
        background-repeat: no-repeat
        background-image: url('../images/profile/bt_gamecenter.png')
    .stats
      display: inline-block
      height: 61%
      width: 87%
      absolute: bottom 0% left 0%
      background-size: 100% 100%
      background-repeat: no-repeat
      background-image: url('../images/profile/bg_bas.png')
      div
        display: inline-block
        height: 74%
        padding-top: 4.5%
        margin-top: 9%
        margin-left: 2%
        table
          width: 100%
          height: 100%
          tbody
            width: 100%
            tr
              width: 100%
              td
                text-align: center
      .stat1
        width: 50%
        background-size: contain
        background-repeat: no-repeat
        background-image: url('../images/profile/tableau_1.png')
        table
          tbody
            tr
              .left
                width: 60%
      .stat2
        width: 43%
        background-size: contain
        background-repeat: no-repeat
        background-image: url('../images/profile/tableau_2.png')
        table
          tbody
            tr
              .left
                width: 50%

  #right-block
    width: 14%
    height: 100%
    absolute: right 0 top 0
    background-size: 150% 100%
    background-repeat: no-repeat
    background-image: url(../images/profile/bord.png)
    .informations
      absolute: top 0% right 0%
      height: 18%
      width: 92%
      font-size: 1.5em
      .cash
        width:100%
        height: 45%
        .cash-value
          text-align:right
          position: absolute
          width: 50%
          top: 11%
        .cash-icone
          absolute: top 11% right 16%
          width:28%
          height:35%
          background-size: contain
          background-repeat: no-repeat
          background-image: url('../images/home/common/credit.png')
      .lifes
        width: 100%
        height: 45%
        .lifes-value
          text-align: right
          absolute: top 52% left 0
          width: 50%
        .lifes-icone
          absolute: top 55% right 16%
          width: 28%
          height: 35%
          background-size: contain
          background-repeat: no-repeat
          background-image: url('../images/home/common/heart.png')
    .bonus
      absolute: right 15% bottom 2%
      height: 79%
      width: 80%
      .elem
        width: 86%
        height:15%
        absolute: right 0
        background-size: contain
        background-repeat: no-repeat
        &.double
          top: 5%
          background-image: url('../images/profile/bonus/x2.png')
        &.mass
          top: 25%
          background-image: url('../images/profile/bonus/divide.png')
        &.fifty_fifty
          top: 45%
          background-image: url('../images/profile/bonus/50-50.png')
        &.add_time
          top: 65%
          background-image: url('../images/profile/bonus/freeze_10s.png')
        &.skip
          top: 85%
          background-image: url('../images/profile/bonus/pass.png')
        .number
          height: 46%
          width: 40%
          absolute: top -19% right -15%
          background: #c50000
          text-align: center
          border-radius: 400%
          color: white
          font-size: 1.2em
  .header
    absolute: top 0% left 0%
    width: 100%
    height: 16%
    .home-btn
      absolute: left 2% top 5%
      width: 8%
      height: 76%
      background-size: contain
      background-repeat: no-repeat
      background-image: url('../images/common/home.png')
