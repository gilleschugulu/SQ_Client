@import 'nib'
@import 'mixins'
.profile-page
  width:100%
  height:100%
  position:relative
  font-family: ramblabold
  font-size: 1.1em
  .background
    width:100%
    height:100%
    background-repeat: no-repeat
    background-image: url("../images/profile/bg_profil.png")
    background-size: 100% 100%
    position: absolute
    .picture-container
      height: 34%
      width: 20%
      display: inline-block;
      margin-left: 14%
      margin-top: 4.5%
      .picture
        relative: top 0.6% left 14.2%
        height: 73.8%;
        width: 73.3%;
        background-size: contain
        background-repeat: no-repeat
      .name
        padding-top: 4%
        width: 90%
        margin: auto
        text-align: center
        font-size: 1.3em
    .personal-info
      font-family: grilled
      display: inline-block
      height: 26%
      width: 25%
      absolute: top 15%
      .level
        text-align: center
        width: 36%
        font-size: 1.5em
        color: #c50000
        display:inline-block
      .score
        text-align: center
        width: 60%
        display: inline-block
      .facebook-link
        display: inline-block
        margin-top: 20%
        width:100%
        height: 50%
        background-size: contain
        background-repeat: no-repeat
        background-image: url('../images/profile/linkfb.png')
        &.done
          background-image: url('../images/profile/linkfb_done.png')
    .buttons
      display: inline-block
      height: 35%
      width: 20%
      absolute: right 19% top 10%
      .hall-of-fame
        display: inline-block
        height: 40%
        width: 90%
        background-size: contain
        background-repeat: no-repeat
        background-image: url('../images/profile/bt_ranking.png')
      .game-center
        display: inline-block
        height: 40%
        width: 90%
        background-size: contain
        background-repeat: no-repeat
        background-image: url('../images/profile/bt_gamecenter.png')
    .stats
      display: inline-block
      height: 44%
      width: 70%
      absolute: bottom 6.8% left 7%
      div
        display: inline-block
        height: 85%
        margin-top: 6%
        margin-left: 2%
        table
          width: 100%
          height: 100%
          tbody
            width: 100%
            tr
              width: 100%
              td
                text-align: center
      .stat1
        width: 50%
        table
          tbody
            tr
              .left
                width: 60%
      .stat2
        width: 44%
        table
          tbody
            tr
              .left
                width: 50%
  .bonus
    absolute: right 8% bottom 0%
    height: 79%
    width: 11%
    .elem
      width: 86%
      height:15%
      background-size: contain
      background-repeat: no-repeat
      &.double
        absolute: top 5% left 7%
        background-image: url('../images/profile/bonus/x2.png')
      &.mass
        absolute: top 25% left 7%
        background-image: url('../images/profile/bonus/divide.png')
      &.fifty_fifty
        absolute: top 45% left 7%
        background-image: url('../images/profile/bonus/50-50.png')
      &.add_time
        absolute: top 65% left 7%
        background-image: url('../images/profile/bonus/freeze_10s.png')
      &.skip
        absolute: top 85% left 7%
        background-image: url('../images/profile/bonus/pass.png')
      .number
        height: 46%
        width: 40%
        absolute: top -19% right -15%
        background: #c50000
        text-align: center
        border-radius: 400%
        color: white
        font-size: 1.2em
  .header
    absolute: top 0% left 0%
    width: 100%
    height: 16%
    .home-btn
      absolute: left 5% top 5%
      width: 8%
      height: 76%
      background-size: contain
      background-repeat: no-repeat
      background-image: url('../images/common/home.png')
    .informations
      absolute: top 0% right 7%
      height:100%
      width:14%
      font-size: 1.5em
      .cash
        width:100%
        height: 45%
        .cash-value
          text-align:right
          position: absolute
          width: 50%
          top: 11%
        .cash-icone
          absolute: top 11% right 16%
          width:28%
          height:35%
          background-size: contain
          background-repeat: no-repeat
          background-image: url('../images/home/common/credit.png')
      .lifes
        width: 100%
        height: 45%
        .lifes-value
          text-align: right
          absolute: top 52%
          width: 50%
        .lifes-icone
          absolute: top 55% right 16%
          width: 28%
          height: 35%
          background-size: contain
          background-repeat: no-repeat
          background-image: url('../images/home/common/heart.png')








