@import 'nib'

.spinner-container
  width: 100%
  height: 100%
  z-index: 2000
  absolute: top 0 left 0
  transform: translate(-1000px, 0)
  &.active
    transform: translate(0, 0)
  #spinner
    background-image: url('../images/spinner/spinner.gif')
    background-size: contain
    width: 10%
    height: 15%
    border-radius: 15px
    opacity: 0.7
  &.partial
    width: 17%
    height: 26%
    border-radius: 1.4em
    top: 37.5%
    left: 41.5%
    #spinner
      background-size: 100% 100%
      width: 60%
      height: 60%
