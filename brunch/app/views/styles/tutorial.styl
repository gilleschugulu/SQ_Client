@import 'nib'

#global-container
 &.iphone5
  .tutorial
    background-size: 100% 100%

.tutorial
  width: 100%
  height: 100%
  background-size: 100% 100%
  position: relative
  #close-btn
    width: 7.8%
    height: 11.7%
    absolute: top 1% left 0.7%
    background-image: url(../images/common/close.png)
    background-size: contain
    background-repeat: no-repeat
    z-index: 5
    &:active
      background-image: url(../images/common/close_a.png)
  #prev-btn
    width: 11.6%
    height: 16.7%
    absolute: bottom 0 left 0
    background-image: url(../images/tutorial/prev.png)
    background-size: 100% 100%
    background-repeat: no-repeat
    z-index: 5
    cursor: pointer
  #next-btn
    width: 11.6%
    height: 16.7%
    absolute: bottom 0 right 0
    background-image: url(../images/tutorial/next.png)
    background-size: 100% 100%
    background-repeat: no-repeat
    z-index: 5
    cursor: pointer
  .controls-container
    width: 100%
    height: 10.9%
    z-index: 9999
    position: relative
  .wrapper
    top: -2%
    width: 100%
    margin 0 auto
    height: 100%
    overflow: visible !important
    #swipeview-masterpage-0, #swipeview-masterpage-1, #swipeview-masterpage-2
      background-size: 100% 100%
      background-repeat: no-repeat
      background-position: 2% 0%
      img
        width: 100%
        height: 100%

  ul#pagination
    width: 100%
    height: 4.7%
    absolute: bottom 3% left 0
    list-style-type: none
    padding: 0
    text-align:center
    li
      display: inline-block
      height: 100%
      width: 1.5em
      background-image: url(../images/tutorial/pagination_grey.png)
      background-size: contain
      background-repeat: no-repeat
      &.current
        background-image: url(../images/tutorial/pagination_red.png)