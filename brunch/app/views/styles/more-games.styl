@import 'mixins'
@import 'nib'

.more-games
  width: 100%
  height: 100%
  background-repeat: no-repeat
  background-image: url(../images/common/background.png)
  background-size: 100% 100%
  #btn-home
    width: 7.4%
    height: 55%
    display: inline-block
    background-image: url('../images/common/home.png')
    background-repeat: no-repeat
    background-size: contain
    absolute: top 1% left 0.7%
  #title
    margin: 0 auto
    top: 5%
    width: 25%
    height: 12%
    position: relative
    background-image: url(../images/more-games/title.png)
    background-size: contain
    background-repeat: no-repeat
  #more-games-content
    font-family: grilled
    position: relative
    top: 5%
    margin: 0 auto
    width: 90%
    height: 80%
    overflow: scroll
    overflow-x: hidden
    -webkit-overflow-scrolling: touch
