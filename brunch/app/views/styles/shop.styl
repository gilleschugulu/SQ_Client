@import 'nib'
@import 'mixins'

#iphone5bg
  &.shop-page-568h
    background-image: url("../images/common/background.jpg")
    background-size: 100% 100%

#global-container
  &.iphone5
    .shop-page
      background: none
      .home-btn
        left: -8%
      #numbers
        width: 110%

.shop-page
  width: 100%
  height: 100%
  background-repeat: no-repeat
  background-image: url("../images/common/background.jpg")
  background-size: 100% 100%
  position: relative
  .home-btn
    absolute: top 1% left 6%
    width: 8%
    height: 11%
    display: inline-block
    background-image: url('../images/ingame/bt_home.png')
    background-repeat: no-repeat
    background-size: contain
    cursor: pointer

  .tabs-container
    absolute: top 5% left 18%
    width: 44%
    height: 12%
    .tab
      color: white
      font-family: open_sansextrabold
      font-size: 1.5em
      text-align: center
      padding: 3% 4%
      display: inline-block
      height: 100%
      position: relative
      cursor: pointer
      background-color: #c70000
      &.inactive
        background-color: grey
        color: #eee
    #credits
      border-top-left-radius: 0.2em
    #bonuses
      left: -2.2%
      border-top-right-radius: 0.2em

  .tab-container
    absolute: top 16% left 4%
    width: 41em
    height: 24em
    background-color: white
    border-radius: 1em
    box-shadow: 0 0 0.5em #999
    .content-container
      width: 100%
      height: 100%

    #credits
      margin: 0 auto
      width: 95%
      height: 90%
      margin-top: 7%
      .pack
        relative: top 4%
        width: 49%
        height: 15%
        margin-bottom: 3%
        background-repeat: no-repeat
        background-size: contain
        display: inline-block
        cursor: pointer
      .paid-pack
        height: 30%
        background-image: url("../images/shop/Jetons/pack_x_fat.png")
        background-repeat: no-repeat
        background-size: 100% 100%
        &:nth-child(odd)
          margin-right: 1%
        .marker
          absolute: left -2%
          font-size: 2.3em
          color: white
          padding: 10% 4%
          height: 100%
          font-family: dax
        .value
          absolute: left 9%
          font-size: 1.9em
          font-family: dax
          color: white
          padding: 11% 0
          width: 30%
          height: 100%
          text-align: right
        .credit-icon
          absolute: top 33% left 40%
          width: 9.2%
          height: 53.5%
          background-image: url("../images/home/common/credit.png")
          background-repeat: no-repeat
          background-size: contain
        .price
          padding-top: 6%
          color: white
          font-size: 2.4em
          font-family: open_sansextrabold
          text-align: right
          absolute: right 4%
          height: 100%
      .unavailable
        opacity : 0.6

      .free-pack
        &:nth-child(even)
          margin-right: 1%
        .text
          color: white
          font-size: 1.4em
          font-family: open_sansextrabold
          display: inline-block
          text-align: center
          width: 46%
          absolute: left 14%
          padding-top: 2%
        .value
          absolute: right 13%
          font-size: 1.8em
          font-family: open_sansextrabold
          color: white
          display: inline-block
          width: 25%
          height: 100%
          text-align: center
        .credit-icon
          absolute: top 16% right 3%
          width: 9.2%
          height: 53.5%
          background-image: url("../images/home/common/credit.png")
          background-repeat: no-repeat
          background-size: contain
      #adcolony
        background-image: url("../images/shop/Jetons/video.png")
      #tapjoy
        background-image: url("../images/shop/Jetons/offre.png")
      #invite_friends
        background-image: url("../images/shop/Jetons/invite.png")
      #facebook_like
        background-image: url("../images/shop/Jetons/like_us.png")
      #twitter
        background-image: url("../images/shop/Jetons/twitter.png")
      #app_store_rating
        background-image: url("../images/shop/Jetons/rate.png")

    #bonus
      .life-container
        display: inline-block
        absolute: top 6% left 4%
        width: 29%
        height: 86%
        .life-pack
          width: 100%
          height: 15%
          margin-bottom: 11%
          background-repeat: no-repeat
          background-size: contain
          background-image: url(../images/shop/life_and_bonus/x_vies.png)
          cursor: pointer
          .value, .price
            color: white
            text-align: right
            height: 100%
            position: absolute
            font-family: open_sansextrabold
          .value
            left: 2%
            width: 30%
            padding: 2% 0
            font-size: 1.6em
          .heart-icon
            display: inline-block
            relative: top 27% left 35%
            width: 1.7em
            height: 1.7em
            background-image: url("../images/home/common/heart.png")
            background-repeat: no-repeat
            background-size: contain
          .price
            width: 29%
            right: 19%
            padding: 5.5% 0
            font-size: 1.1em
          .credit-icon
            display: inline-block
            relative: top 14% left 67%
            width: 1.3em
            height: 1.3em
            background-image: url("../images/home/common/credit.png")
            background-repeat: no-repeat
            background-size: contain
      #bonus-packs
        width: 60%
        height: 87%
        absolute: top 6% right 3%
        .bonus-pack
          width: 100%
          height: 30%
          margin-bottom: 4%
          background-repeat: no-repeat
          background-size: contain
          background-image: url("../images/shop/life_and_bonus/x_bonus.png")
          cursor: pointer
          .value, .price
            color: white
            height: 100%
            position: absolute
            font-family: open_sansextrabold
          .value
            text-align: center
            left: 43.5%
            width: 16%
            padding: 8% 0
            font-size: 1.6em
          .price
            text-align: right
            width: 23%
            right: 13%
            padding: 6% 0
            font-size: 2.1em
          .credit-icon
            display: inline-block
            relative: top 36% left 88%
            width: 1.7em
            height: 1.7em
            background-image: url("../images/home/common/credit.png")
            background-repeat: no-repeat
            background-size: contain