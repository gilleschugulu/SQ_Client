@import 'nib'
@import 'mixins'

.shop-page
  width: 100%
  height: 100%
  background-repeat: no-repeat
  background-image: url("../images/common/background.png")
  background-size: 100% 100%
  position: relative
  .home-btn
    absolute: top 1% left 6%
    width: 8%
    height: 11%
    display: inline-block
    background-image: url('../images/ingame/bt_home.png')
    background-repeat: no-repeat
    background-size: contain
    cursor: pointer

  .tabs-container
    absolute: top 7% left 18%
    width: 39%
    height: 7%
    .tab
      display: inline-block
      width: 40%
      height: 100%
      position: relative
      background-repeat: no-repeat
      background-size: contain
      cursor: pointer
    #credits
      width: 33.1%
      &.active
        background-image: url("../images/shop/jeton.png")
      &.inactive
        background-image: url("../images/shop/jeton_inactive.png")
    #bonuses
      left: -2.2%
      width: 50%
      &.active
        background-image: url("../images/shop/bonusvies.png")
      &.inactive
        background-image: url("../images/shop/bonusvies_inactive.png")

  .tab-container
    absolute: top 13% left 8%
    width: 81%
    height: 72%
    background-image: url("../images/shop/box2.png")
    background-repeat: no-repeat
    background-size: contain
    .content-container
      width: 100%
      height: 100%

    #credits
      .paid-offers
        absolute: top 4% left 48%
        width: 45%
        height: 72%
        display: inline-block
        .paid-pack
          relative: top 4% left 6%
          display: block
          width: 91%
          height: 25%
          background-repeat: no-repeat
          background-size: contain
          cursor: pointer
          .marker
            relative: top 4% left 7%
            font-size: 2.3em
            color: white
          .value
            relative: top 4% left 8%
            font-size: 1.6em
            font-family: dax
            color: orange
            display: inline-block
            width: 30%
            text-align: center
          .credit-icon
            relative: top 4% left 5%
            display: inline-block
            width: 9%
            height: 32%
            background-image: url("../images/home/common/credit.png")
            background-repeat: no-repeat
            background-size: contain
        .unavailable
          opacity : 0.6

      .free-offers
        absolute: top 3% left 3%
        width: 40%
        height: 90%
        display: inline-block
        .free-pack
          relative: top 4% left 7%
          width: 90%
          height: 16%
          background-repeat: no-repeat
          background-size: contain
          display: block
          cursor: pointer
          &:nth-child(3)
            margin-top: 1%
          span
            relative: top 13% left 59%
            font-size: 1.8em
            color: yellow
            font-family: dax
        #adcolony
          background-image: url("../images/shop/Jetons/video.png")
        #tapjoy
          background-image: url("../images/shop/Jetons/offre.png")
        #invite_friends
          background-image: url("../images/shop/Jetons/invite.png")
        #facebook_like
          background-image: url("../images/shop/Jetons/like.png")
        #twitter
          background-image: url("../images/shop/Jetons/twitter.png")
        #app_store_rating
          background-image: url("../images/shop/Jetons/note.png")

    #bonus
      .life-container
        display: inline-block
        relative: top 4% left 3%
        width: 29%
        height: 86%
        .life-pack
          relative: top 2% left 2%
          width: 100%
          height: 21%
          background-repeat: no-repeat
          background-size: contain
          cursor: pointer

      .bonus-pack
        display: inline-block
        relative: top 4% left 7%
        width: 18.6%
        height: 86%
        margin-right: 1.4%
        background-repeat: no-repeat
        background-size: contain
        cursor: pointer
        &.small
          background-image: url("../images/shop/life_and_bonus/50.png")
        &.medium
          background-image: url("../images/shop/life_and_bonus/300.png")
        &.big
          background-image: url("../images/shop/life_and_bonus/1000.png")
