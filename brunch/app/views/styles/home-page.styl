@import 'nib'

#numbers
  width: 100%
  height: 6%
  text-align: right
  span
    height: 100%
  .number
    display: inline-block
    color: #252525
    font-size: 1.5em
    font-weight: bold
    text-align: right
  .icon
    display: inline-block
    width: 5%
    height: 80%
    relative: bottom -12% top 0
    background-size: contain
    background-repeat: no-repeat
  #heart-icon
    background-image: url(../images/home/common/heart.png)
  #credit-icon
    background-image: url(../images/home/common/credit.png)


.home-page
  width: 100%
  height: 100%
  background-image: url("../images/home/common/background.jpg")
  background-size: 100% 100%
  position: relative
  #logo
    width: 38%
    height: 37%
    absolute: top 12% right 10%
    background-image: url(../images/home/common/logo.png)
    background-size: contain
    background-repeat: no-repeat
  #touch-me
    width: 40%
    height: 5%
    text-align: center
    absolute: top 78% left 12%
    font-weight: bold
    font-size: 1em
    color: #1f1f1f
  .journal-container
    transform: rotate(-2deg)
    absolute: top 35% left 7%
    width: 51%
    height: 67%
    background-image: url(../images/home/common/journal.png)
    background-size: contain
    background-repeat: no-repeat
    transition: all 0.3s ease
    &.shown
      top: 35%
      transform: rotate(-2deg)
    &.hiddened
      top: 82%
      transform: rotate(0deg)
    &.completely-hiddened
      top: 150%
      transform: rotate(0deg)
    #equipe-btn
      cursor: pointer
      width: 90%
      height: 39%
      relative: top -15% left 4%
    #date
      absolute: top 13% right 13%
      font-size: 0.60em
      width: 16%
      font-style: italic
      font-weight: bold
      color: #313131
      text-align: center
    #title
      width: 73.5%
      height: 9%
      color: white
      absolute: top 24% left 11%
      text-transform: uppercase
      padding: 1.3% 6% 1.3% 0
      font-size: 0.85em
      font-weight: bold
      font-style: italic
      background-repeat: no-repeat
      background-size: contain
    &.no-friends
      #title
        left: 25%
        color: black
        font-size: 1.2em
        #exculsive
          color: red
          font-size: 0.7em
          relative: left -6% top 0
          width: 30%
        #username
          relative: left 25% top -100%
          height: 100%
          width: 60%
      #photo-container
        width: 25.5%
        height: 29.3%
        absolute: top 33% left 16%
        background-image: url(../images/home/pasamis/photo.png)
        background-repeat: no-repeat
        background-size: contain
        #photo
          margin-top: 4%
          margin-left: 4%
          width: 88.5%
          height: 86%
          background-repeat: no-repeat
          background-size: 100% 100%
      #countdown
        width: 73.5%
        height: 9%
        absolute: top 60.5% left 11%
        padding-top: 2%
        background-image: url(../images/home/pasamis/ranking_day.png)
        background-repeat: no-repeat
        background-size: contain
        .number
          position: relative
          display: inline-block
          height: 90%
          color: red
          font-weight: bold
          letter-spacing: 0.3em
        #days
          margin-left: 50.4%
        #hours
          margin-left: 1%
        #minutes
          margin-left: 1.5%
      @media screen and (min-width: 960px) and (max-width: 1023px)
        #countdown
          padding-top: 2.5%
      #invite-btn
        cursor: pointer
        display: block
        width: 42.8%
        height: 9%
        absolute: top 51% right 14%
        background-image: url(../images/home/pasamis/invite.png)
        background-repeat: no-repeat
        background-size: contain
        &:active
          background-image: url(../images/home/pasamis/invite_a.png)
      #message
        text-transform: uppercase
        padding: 1.3%
        font-size: 0.85em
        font-weight: bold
        width: 43%
        absolute: right 15% top 33%
      #ranking
        width: 73.5%
        height: 28.3%
        absolute: top 70% left 11%
        text-align: center
        .spacer
          display: inline-block
          width: 11%
          height: 35%
          background-image: url(../images/home/pasamis/spacer.png)
          background-repeat: no-repeat
          background-size: contain
          &:last-child
            display: none
        .participant
          display: inline-block
          width: 23.2%
          height: 100%
          background-image: url(../images/home/pasamis/frame_rank.png)
          background-repeat: no-repeat
          background-size: contain
          .photo
            margin-top: -8%
            margin-left: 9%
            width: 78%
            height: 54%
            background-repeat: no-repeat
            background-size: contain
          .blaze
            width: 84%
            height: 12%
            margin-left: 8%
            font-weight: bold
            text-align: center
          .score
            width: 97%
            height: 12%
            font-size: 0.6em
            font-weight: bold
            text-align: center
            color: red
          .rank
            relative: top 1% left 2%
            padding-top: 1%
            padding-right: 7%
            width: 42%
            height: 12%
            color: red
            font-size: 0.5em
            font-weight: bold
            text-align: center
            background-image: url(../images/home/pasamis/rank.png)
            background-repeat: no-repeat
            background-size: contain
    &.one-friend
      &.shown
        top: 42%
      #title
        background-image: url(../images/home/1ami/title.png)
      #vs
        relative: left 11% top -3%
        width: 73.5%
        height: 30%
        background-image: url(../images/home/1ami/player_VS.png)
        background-repeat: no-repeat
        background-size: contain
        .participant
          display: inline-block
          relative: top 7% left 5%
          width: 38%
          height: 58%
          &:nth-child(2)
            left: 17.5%
          .photo
            width: 50%
            height: 93%
            background-repeat: no-repeat
            background-size: 100% 100%
          .blaze
            absolute: top 21% right 0
            width: 49%
            height: 25%
            font-size: 0.6em
            font-weight: bold
            text-align: center
          .score
            absolute: top 49% right 0
            width: 49%
            height: 25%
            font-size: 0.8em
            font-weight: bold
            text-align: center
            color: red
      #buttons
        width: 73.5%
        height: 30%
        relative: left 12% top -3%
        a
          cursor: pointer
          display: inline-block
          width: 45%
          height: 100%
          background-repeat: no-repeat
          background-size: contain
        #invite-btn
          background-image: url(../images/home/1ami/invite.png)
          &:active
            background-image: url(../images/home/1ami/invite_a.png)
        #ranking-btn
          width: 51.5%
          background-image: url(../images/home/1ami/ranking.png)
          &:active
            background-image: url(../images/home/1ami/ranking_a.png)
    &.two-friends
      #title
        background-image: url(../images/home/2amis/title.png)
      #podium
        relative: left 11% top -6%
        width: 73.5%
        height: 39%
        background-image: url(../images/home/2amis/rank_3players.png)
        background-repeat: no-repeat
        background-size: contain
        .participant
          display: inline-block
          width: 22%
          height: 58%
          .rank
            color: white
            font-size: 0.6em
            font-weight: bold
            padding-right: 9%
            text-align: center
            absolute: left 3% top -2%
            width: 45%
            height: 17%
            background-repeat: no-repeat
            background-size: contain
          .photo
            absolute: left 8% top 2%
            width: 85%
            height: 69%
            background-repeat: no-repeat
            background-size: 100% 100%
          .blaze
            absolute: top 85% left 0
            width: 100%
            height: 17%
            font-size: 0.6em
            font-weight: bold
            text-align: center
          .score
            absolute: top 99% left 0
            width: 100%
            height: 17%
            font-size: 0.7em
            font-weight: bold
            text-align: center
            color: red
        #gold
          absolute: top 9% left 39%
          .rank
            background-image: url(../images/home/2amis/podium_rank_gold.png)
          .blaze
            top: 87%
            left: 3%
          .score
            top: 102%
            left: 3%
        #silver
          absolute: top 16% left 15%
          .rank
            background-image: url(../images/home/2amis/podium_rank_silver.png)
          .photo
            left: 10%
        #bronze
          absolute: top 21% left 63%
          .rank
            background-image: url(../images/home/2amis/podium_rank_bronze.png)
          .blaze
            top: 80%
            left: 6%
          .score
            top: 94%
            left: 6%
      #buttons
        width: 73.5%
        height: 30%
        relative: left 12% top -3%
        a
          cursor: pointer
          display: inline-block
          width: 45%
          height: 100%
          background-repeat: no-repeat
          background-size: contain
        #invite-btn
          background-image: url(../images/home/2amis/invite.png)
          &:active
            background-image: url(../images/home/2amis/invite_a.png)
        #ranking-btn
          width: 51.5%
          background-image: url(../images/home/2amis/ranking.png)
          &:active
            background-image: url(../images/home/2amis/ranking_a.png)
    &.twoplus-friends
      #title
        padding: 0.8% 6% 0.8% 0.8%
        height: 12%
        background-image: url('../images/home/+2amis/title.png')
        .rank
          color: red
      #leaderboard-container
        overflow: scroll
        -webkit-overflow-scrolling: touch
        relative: left 11% top 0%
        width: 50%
        height: 62%
        #leaderboard
          border-collapse:collapse
          width: 100%
          height: 100%
          .participant
            height: 2.5em
            border: 0.2em solid #dddddd
            &:nth-child(odd)
              background-color: #dddddd
            &.self
              background-color: #ff787d
            .rank
              color: black
              font-size: 0.7em
              font-weight: bold
              padding-left: 2%
              text-align:center
            .photo
              width: 22%
              div
                width: 83%
                height: 89%
                margin-top: 1%
                margin-left: 2%
                background-repeat: no-repeat
                background-size: 100% 100%
            .blaze
              font-size: 0.6em
              font-weight: bold
              text-align: center
            .score
              padding-right: 2%
              font-size: 0.7em
              font-weight: bold
              text-align: right
              color: red
      #buttons
        width: 27%
        height: 53%
        absolute: left 62% top 43%
        a
          display: block
          cursor: pointer
          width: 100%
          height: 41%
          background-repeat: no-repeat
          background-size: contain
        #invite-btn
          background-image: url('../images/home/+2amis/inviter.png')
          &:active
            background-image: url('../images/home/+2amis/inviter_a.png')
        #ranking-btn
          margin-top: 19%
          background-image: url('../images/home/+2amis/ranking.png')
          &:active
            background-image: url('../images/home/+2amis/ranking_a.png')
  .more-games-link
    background-image: url("../images/home/common/moregame.png")
    background-size: 100% 100%
    background-repeat: no-repeat
    absolute: bottom 0 right 0
    width: 8.4%
    height: 12.7%
  #menu
    width: 31%
    height: 50%
    absolute: top 49% right 13%
    .item
      display: block
      cursor: pointer
      background-size: contain
      background-repeat: no-repeat
      &.game-link
        width: 91%
        height: 27%
        // absolute: top 55% left 71%
        margin: 0 auto
        background-image: url("../images/home/common/play.png")
        &:active
          background-image: url("../images/home/common/play_a.png")
      &.shop-link
        background-image: url("../images/home/common/shop.png")
        width: 75%
        height: 23%
        margin: 7% auto
        &:active
          background-image: url("../images/home/common/shop_a.png")
    .small-buttons-container
      width: 100%
      height: 28%
      a
        display: inline-block
        height: 100%
        width: 30%
        margin-right: 15%
      .profile
        margin-left: 12%
        background-image: url("../images/home/common/profile.png")
        &:active
          background-image: url("../images/home/common/profile_a.png")
      .options-link
        background-image: url("../images/home/common/options.png")
        margin-right: 0
        &:active
          background-image: url("../images/home/common/options_a.png")

.blaze
  overflow: hidden
