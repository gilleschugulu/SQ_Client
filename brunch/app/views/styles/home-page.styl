@import 'nib'

.home-page
  width: 100%
  height: 100%
  background-image: url("../images/home/common/background.jpg")
  background-size: 100% 100%
  position: relative
  #numbers
    width: 100%
    height: 6%
    text-align: right
    span
      height: 100%
    .number
      display: inline-block
      color: #252525
      font-size: 1.5em
      font-weight: bold
      text-align: right
    .icon
      display: inline-block
      width: 5%
      height: 80%
      relative: bottom -12%
      background-size: contain
      background-repeat: no-repeat
    #heart-icon
      background-image: url(../images/home/common/heart.png)
    #credit-icon
      background-image: url(../images/home/common/credit.png)
  #logo
    width: 38%
    height: 37%
    absolute: top 12% right 10%
    background-image: url(../images/home/common/logo.png)
    background-size: contain
    background-repeat: no-repeat
  #touch-me
    width: 40%
    height: 5%
    text-align: center
    absolute: top 78% left 12%
    font-weight: bold
    font-size: 1em
    color: #1f1f1f
  .journal-container
    transform: rotate(-2deg)
    absolute: top 35% left 7%
    width: 51%
    height: 67%
    background-image: url(../images/home/common/journal.png)
    background-size: contain
    background-repeat: no-repeat
    transition: all 0.3s ease
    &.shown
      top: 35%
      transform: rotate(-2deg)
    &.hiddened
      top: 82%
      transform: rotate(0deg)
    #equipe-btn
      cursor: pointer
      width: 90%
      height: 39%
      relative: top -15% left 4%
    #date
      absolute: top 13% right 13%
      font-size: 0.65em
      width: 16%
      font-style: italic
      font-weight: bold
      color: #313131
    #title
      width: 73.5%
      height: 9%
      absolute: top 24% left 11%
      text-transform: uppercase
      padding: 1.3%
      font-size: 0.85em
      font-weight: bold
    &.no-friends
      background-size: contain
      #title
        color: white
        font-style: italic
        background-image: url(../images/home/pasamis/exclusif.png)
        background-repeat: no-repeat
        background-size: contain
        #exculsive
          color: red
      #photo-container
        width: 25.5%
        height: 29.3%
        absolute: top 33% left 16%
        background-image: url(../images/home/pasamis/photo.png)
        background-repeat: no-repeat
        background-size: contain
        #photo
          margin-top: 4%
          margin-left: 4%
          width: 88.5%
          height: 86%
          background-repeat: no-repeat
          background-size: 100% 100%
      #countdown
        width: 73.5%
        height: 9%
        absolute: top 60.5% left 11%
        padding-top: 2.5%
        background-image: url(../images/home/pasamis/ranking_day.png)
        background-repeat: no-repeat
        background-size: contain
        .number
          color: red
          font-weight: bold
          letter-spacing: 0.3em
        #days
          margin-left: 50.4%
        #hours
          margin-left: 1%
        #minutes
          margin-left: 1.5%
      #invite-btn
        display: block
        width: 42.8%
        height: 9%
        absolute: top 51% right 14%
        background-image: url(../images/home/pasamis/invite.png)
        background-repeat: no-repeat
        background-size: contain
        &:active
          background-image: url(../images/home/pasamis/invite_a.png)
      #message
        text-transform: uppercase
        padding: 1.3%
        font-size: 0.85em
        font-weight: bold
        width: 43%
        absolute: right 15% top 33%
      #ranking
        width: 73.5%
        height: 28.3%
        absolute: top 70% left 11%
        .spacer
          display: inline-block
          width: 11%
          height: 35%
          background-image: url(../images/home/pasamis/spacer.png)
          background-repeat: no-repeat
          background-size: contain
        .participant
          display: inline-block
          width: 23.2%
          height: 100%
          background-image: url(../images/home/pasamis/frame_rank.png)
          background-repeat: no-repeat
          background-size: contain
          .photo
            margin-top: -8%
            margin-left: 9%
            width: 78%
            height: 54%
            background-repeat: no-repeat
            background-size: contain
          .blaze
            width: 97%
            height: 12%
            font-size: 0.6em
            font-weight: bold
            text-align: center
          .score
            width: 97%
            height: 12%
            font-size: 0.6em
            font-weight: bold
            text-align: center
            color: red
          .rank
            relative: top 1% left 2%
            padding-top: 1%
            padding-right: 7%
            width: 42%
            height: 12%
            color: red
            font-size: 0.5em
            font-weight: bold
            text-align: center
            background-image: url(../images/home/pasamis/rank.png)
            background-repeat: no-repeat
            background-size: contain
    &.one-friend
      background: red
    &.two-friends
      background: red
    &.twoplus-friends
      background: red
  .more-games-link
    background-image: url("../images/home/common/moregame.png")
    background-size: 100% 100%
    background-repeat: no-repeat
    absolute: bottom 0 right 0
    width: 8.4%
    height: 12.7%
  #menu
    width: 31%
    height: 50%
    absolute: top 49% right 13%
    .item
      display: block
      cursor: pointer
      background-size: contain
      background-repeat: no-repeat
      &.game-link
        width: 91%
        height: 27%
        // absolute: top 55% left 71%
        margin: 0 auto
        background-image: url("../images/home/common/play.png")
        &:active
          background-image: url("../images/home/common/play_a.png")
      &.shop-link
        background-image: url("../images/home/common/shop.png")
        width: 75%
        height: 23%
        margin: 7% auto
        &:active
          background-image: url("../images/home/common/shop_a.png")
    .small-buttons-container
      width: 100%
      height: 28%
      a
        display: inline-block
        height: 100%
        width: 30%
        margin-right: 15%
      .profile-link
        margin-left: 12%
        background-image: url("../images/home/common/profile.png")
        &:active
          background-image: url("../images/home/common/profile_a.png")
      .options-link
        background-image: url("../images/home/common/options.png")
        margin-right: 0
        &:active
          background-image: url("../images/home/common/options_a.png")
