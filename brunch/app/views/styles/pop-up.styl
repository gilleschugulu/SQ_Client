@import 'nib'
@import 'mixins'

#pop-up-container
  width: 100%
  height: 100%
  z-index: 1000
  absolute: top 0 left 0
  background-color: rgba(0,0,0,0)
  transform: translate(-9999px, 0) translateZ(0)
  transition: background-color ease 300ms
  &.active
    transform: translate(0, 0) translateZ(0)
  &.backgroundTransition
    background-color: rgba(0,0,0,0.6)
  .popup
    relative: top 7% left 0
    width: 72.2%
    padding: 3.3% 8% 8% 8.3%
    height: 97.6%
    background-image: url('../images/pause/popup.png')
    background-repeat: no-repeat
    background-size: contain
    border-radius: none
    box-shadow: none
    transform: translate(-9999px, 0) translateZ(0)
    &.animated
      transform: translate(0, 0) translateZ(0)
    .title
      width: 100%
      text-align: center
      text-transform: uppercase
      margin: 2% 0 0 0
      font: 2.4em grilled
    .text-container
      width: 80%
      margin: 0 auto 0 auto
      text-align: center
      font: 1.7em grilled
    .btn-container
      width: 80%
      height: 55%
      margin: 5% auto 0 auto
      text-align: center
      .btn
        color: #fff
        cursor: pointer
        display: inline-block
        &.ok
          relative: top 5% left 0
          background-image: url('../images/pause/ok.png')
          background-repeat: no-repeat
          background-size: contain
          width: 22%
          height: 37%
          &:active
            background-image: url('../images/pause/ok_a.png')
        &.resume
          background-image: url('../images/pause/reprendre.png')
          background-repeat: no-repeat
          background-size: contain
          width: 54.2%
          height: 37.4%
          float: left
          &:active
            background-image: url('../images/pause/reprendre_a.png')
        &.quit
          background-image: url('../images/pause/quitter.png')
          background-repeat: no-repeat
          background-size: contain
          width: 42.7%
          height: 30%
          margin-top: 4.5%
          float: right
          &:active
            background-image: url('../images/pause/quitter_a.png')
        &.sound
          background-image: url('../images/pause/sound.png')
          background-repeat: no-repeat
          background-size: contain
          width: 65%
          height: 27%
          &.off
            background-image: url('../images/pause/sound_a.png')
