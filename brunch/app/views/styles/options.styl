@import 'nib'

.options-container
  width: 100%
  height: 100%
  background-image: url("../images/options/background.jpg")
  background-size: 100% 100%
  position: relative
  .home-btn
    width: 7.4%
    height: 55%
    display: inline-block
    background-image: url('../images/common/home.png')
    background-repeat: no-repeat
    background-size: contain
    absolute: top 1% left 0.7%
  .title
    width: 31%
    height: 11%
    margin: 0 auto
    background-image: url('../images/options/title.png')
    background-repeat: no-repeat
    background-size: contain
  .content-container
    width: 100%
    height: 100%
    position: relative
    left: 8%
    top: 11%
    .button
      display: block
      float: left
      width: 40%
      height: 15%
      margin: 0 4% 0 0
      background-repeat: no-repeat
      background-size: contain
      &#option-music
        background-image: url('../images/options/musique.png')
        &.off
          background-image: url('../images/options/musique_deactive.png')
      &#option-fx
        background-image: url('../images/options/effet.png')
        &.off
          background-image: url('../images/options/effet_deactive.png')
      &#option-credits
        background-image: url('../images/options/credits.png')
      &#option-cgu
        background-image: url('../images/options/cgu.png')
      &#option-help
        background-image: url('../images/options/aide.png')
      &#option-tutorial
        background-image: url('../images/options/tutoriel.png')
      &#option-facebook-connect
        background-image: url('../images/options/liaison_fb.png')
      &#option-level-notif
        background-image: url('../images/options/niveaux.png')
        &.off
          background-image: url('../images/options/niveaux_deactive.png')
      &#option-ranking-notif
        background-image: url('../images/options/classements.png')
        &.off
          background-image: url('../images/options/classements_deactive.png')
      &#option-info-notif
        background-image: url('../images/options/infos.png')
        &.off
          background-image: url('../images/options/infos_deactive.png')
