@import 'nib'

#iphone5bg
  &.options-page-568h
    background-image: url("../images/common/background.jpg")
    background-size: 100% 100%

#global-container
  &.iphone5
    .options-container
      background: none !important
      .home-btn
        left: -8%

.options-container
  width: 100%
  height: 100%
  background-image: url("../images/common/background.jpg")
  background-size: 100% 100%
  position: relative
  .home-btn
    width: 7.4%
    height: 55%
    display: inline-block
    background-image: url('../images/common/home.png')
    background-repeat: no-repeat
    background-size: contain
    absolute: top 1% left 0.7%
  .title
    relative: top 5% left 3%
    width: 31%
    height: 11%
    margin: 0 auto
    background-image: url('../images/options/title.png')
    background-repeat: no-repeat
    background-size: contain
  .content-container
    width: 100%
    height: 100%
    relative: left 3% top 25%
    .button
      cursor: pointer
      display: block
      float: left
      width: 38%
      height: 15%
      margin: 0 3% 7% 5%
      background-repeat: no-repeat
      background-size: contain
      &#option-credits
        background-image: url('../images/options/credits.png')
        // width: 82.3%
      &#option-help
        background-image: url('../images/options/aide.png')
      &#option-tutorial
        background-image: url('../images/options/tutoriel.png')
      &#option-facebook-connect
        background-image: url('../images/options/liaison_fb.png')
      &#option-info-notif
        background-image: url('../images/options/infos.png')
        &.off
          background-image: url('../images/options/infos_deactive.png')
      &#option-sound
        background-image: url('../images/options/effet.png')
        // relative: left 23%
        &.off
          background-image: url('../images/options/effet_deactive.png')

