@import 'nib'
@import 'mixins'

.credits
  width: 100%
  height: 100%
  background: white
  .background
    width: 100%
    height: 100%
    absolute: left 0% top 0%
    background-image: url('../images/placeholder.png')
    background-size: contain
    background-repeat: no-repeat
  #close-btn
    width: 7.8%
    height: 11.7%
    absolute: top 1% left 0.7%
    background-image: url('../images/common/close.png')
    background-size: contain
    background-repeat: no-repeat
    &:active
      background-image: url('../images/common/close_a.png')
