@import 'mixins'
@import 'nib'

#iphone5bg
  &.hall-of-fame-page-568h
    background-image: url('../images/hall-of-fame/background.png')
    background-size: 100% 100%

#global-container
  &.iphone5
    .hall-of-fame-page
      background: none

.hall-of-fame-page
  width: 100%
  height: 100%
  background-image: url('../images/hall-of-fame/background.png')
  background-repeat: no-repeat
  background-size: 100% 100%
  z-index: 1

  #fixBackgroundiPad
    width: 100%
    height: 100%
    opacity: 0
    position: relative
    z-index: 1

  .home-btn, .cash-container
    position: absolute
    top: 2.8%
  .home-btn
    width: 7.4%
    height: 12%
    display: inline-block
    background-image: url('../images/common/close.png')
    background-repeat: no-repeat
    background-size: contain
    absolute: top 1% left 0.7%
    z-index: 6
    cursor: pointer
  .cash-container
    width: 100%;
    height: 6%;
    text-align: right;
    position: absolute
    top: 0%
    .life-value
      display: inline-block;
      color: #252525;
      font-size: 1.5em;
      text-align: right;
    #life-icon
      display: inline-block;
      width: 5%;
      height: 80%;
      position: relative;
      bottom: -12%;
      background-size: contain;
      background-repeat: no-repeat;
      background-image: url('../images/home/common/heart.png')
    .cash-value
      display: inline-block
      color: #252525
      font-size: 1.5em
      text-align: right
    #cash-icon
      display: inline-block
      width: 5%
      height: 80%
      position: relative
      bottom: -12%
      background-size: contain
      background-repeat: no-repeat
      background-image: url('../images/home/common/credit.png')
  .content-container
    width: 75%
    height: 90%
    margin: 0 auto
    absolute: left 5% top 3%
    z-index: 5
    .spinner
      width: 25%
      height: 25%
      absolute: left 50% top 50%
      background-image: url('../images/spinner/spinner2.gif')
      background-size: contain
      background-repeat:no-repeat
    .tournament
      width: 55%
      height: 9%
      display:inline-block
      absolute: left 28% top 8.5%
      background-repeat: no-repeat
      background-size: 100%
      background-image: url('../images/hall-of-fame/tournoi.png')
      letter-spacing: 0.3em
      font-size: 1.3em
      #HoF-days
        absolute: left 45% top 27%
      #HoF-hours
        absolute: left 59% top 27%
      #HoF-min
        absolute: left 73% top 27%
    .level
      width: 10%
      height: 8%
      display:inline-block
      absolute: right 5% top 10%
      font: 1.5em grilled
      color: #252525
      text-align: right
    #btn_HoF
      absolute: top 20% left 6%
      height: 20%
      width: 20%
      .category
        margin-left: 4%
        height: 50%
        width: 100%
        background-size: contain
        background-repeat: no-repeat
        cursor: pointer
        margin-top: -0.9%
      .friends
        background-image: url('../images/hall-of-fame/amis_inactive.png')
        &.active
          background-image: url('../images/hall-of-fame/amis.png')
          cursor: default
      .global
        background-image: url('../images/hall-of-fame/global_inactive.png')
        &.active
          background-image: url('../images/hall-of-fame/global.png')
          cursor: default

    .ranking-container-image
      overflow-y: hidden
      width: 75%
      height: 84%
      absolute: right 0% bottom 0%
      background-repeat: no-repeat
      background-size: contain
      background-image: url('../images/hall-of-fame/box_classements.png')
      padding-top: 1%
      // Iphone 5
      @media only screen and (min-device-width: 560px) and (max-device-width: 1136px) and (-webkit-min-device-pixel-ratio: 2)
        .ranking-container
          width: 78% !important
      .ranking-container
        overflow-y: scroll
        -webkit-overflow-scrolling: touch
        width: 100%
        height: 98%
        #no-friends
          width: 40%
          height:20%
          background-image: url('../images/hall-of-fame/invite.png')
          background-size: contain
          background-repeat: no-repeat
          absolute: left 40% top 40%
        #no-fb-connected
          width: 40%
          height:20%
          background-image: url('../images/hall-of-fame/linkfb.png')
          background-size: contain
          background-repeat: no-repeat
          absolute: left 30% top 40%
        .rank_separator
          width: 98%
          height: 6%
          margin-left: 0.7%
          background-size: 100%
          font-family: ramblabold
          &.up
            background-color: #4bbb00
          &.stay
            background-color: #747474
          &.down
            background-color: #c80000

        .separator
          width: 99%
          height: 2%
          margin-left: 1%
          background-image: url('../images/hall-of-fame/line.png')
          background-size: 100%
        .redSeparator
          width: 100%
          height: 2%
          margin-left: 0%
          background-color: rgb(226, 23, 23)
        .div-ranking
          margin-left: 0.7%
          width: 98%
          height: 9.5%
          color: #4e4e4e
          font-family: ramblabold
          background-size: 100%
          &.moreFriends
            border: 1px solid rgb(226, 23, 23)
            background-color: rgb(250, 245, 242)
          &:nth-child(even)
            background-color: #f5d0d0
          &:nth-child(odd)
            background-color: #fef8f8
          .invite-btn
            cursor: pointer
            margin-top: 1%
            position: absolute
            right: 0%
            width: 9%
            height: 7%
            background-image: url('../images/hall-of-fame/icon-feature-invite.png')
            background-size: contain
            background-repeat: no-repeat
          .rank
            width 5%
            text-align: center
            font-size: 0.7em
            display: inline-block
            relative: left 5% right 0%
            margin-top: 3%
            bottom: 33%  // strange
            &.icon
              margin-top: 0%
              height: 88%
              background-size: contain
              background-repeat: no-repeat
              bottom: 0
            &.first
              background-image: url('../images/hall-of-fame/rank_1.png')
            &.second
              background-image: url('../images/hall-of-fame/rank_2.png')
            &.third
              background-image: url('../images/hall-of-fame/rank_3.png')
          .profilepic
            display: inline-block
            relative: left 10% right 0
            margin-top: 0.5%
            height: 89%
            width: 7%
            -webkit-transform: translateZ(0px)
          .username
            display: inline-block !important
            position: relative !important
            left: 15%
            height: 90%
            width: 40%
            bottom: 25%
            font-size: 1em
            color: #2b2b2b
          .money
            position: relative
            display: inline-block
            left: 25%
            font-size: 1.2em
            width: 18%
            height: 90%
            bottom: 25%
            text-align: center
          .ask-friend
            cursor: pointer
            margin-top: 1%
            position: relative
            right: 2%
            width: 9%
            height: 88%
            background-image: url('../images/hall-of-fame/vie_toask.png')
            background-size: contain
            background-repeat: no-repeat
            display: inline-block
            &.asked
              background-image: url('../images/hall-of-fame/vie_asked.png')
