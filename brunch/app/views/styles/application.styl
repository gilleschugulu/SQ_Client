// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
// No more vendor prefixes. http://visionmedia.github.com/nib/
@import 'nib'

// Apply a natural box layout model to all elements.
// http://paulirish.com/2012/box-sizing-border-box-ftw/
*
  box-sizing: border-box
  font-smoothing: antialiased
  -webkit-font-smoothing: antialiased
  -webkit-tap-highlight-color: rgba(0,0,0,0)

*:not(input):not(textarea)
  -webkit-user-select: none
  -webkit-touch-callout: none

body
  absolute: top 0
  background: #eaeaea
  width: 100%
  height: 100%

.box-align
  display: -webkit-box !important
  box-orient: horizontal
  box-pack: center
  box-align: center

.alert-connection
  width: 100%
  height: 10%
  background: linear-gradient(top, #ed1c24 0%, #aa1317)
  absolute: top 0 left 0
  border-bottom: 3px solid rgba(62, 57, 61, 0.25)
  text-align: center
  padding: 1.7%
  color: #fff
  font: 1.4em dax
  stroke: rgba(62, 57, 61, 0.25)
  transition: transform 300ms ease-out
  transform: translate(0, -100%)
  &.active
    transform: translate(0, 0)

.clearfix
  -webkit-perspective: 0

.header-container, .btn-home
  z-index: 1000

.no-anim
  animation-duration: 1ms !important

#iphone5bg
  position: absolute

#global-container
  z-index: 2
  background: #eaeaea
  position: relative
  overflow: hidden
  -webkit-perspective: 1000
  #page-container
    width: 100%
    height: 100%
    position: relative
    .resize, .resizeOnce
      font-size: 1.4em
      overflow: hidden
      display: -webkit-box
      box-orient: horizontal
      box-pack: center
      box-align: center
  #fade-screen
    width: 100%
    height: 100%
    background: #eaeaea
    absolute: top 0 left 0
    transform: translate(-1500px, 0) translateZ(0)
    animation-duration: 450ms
    z-index: 1000
    &.animated
      transform: translate(0,0) translateZ(0)

@media screen and (max-width: 959px)
  #global-container
    width: 480px
    height: 320px
    font-size: 11px

  .fixedSize
    width: 480px !important
    height: 320px !important

@media only screen and (min-width: 560px) and (max-device-width: 1136px)
  #global-container, #iphone5bg
    width: 568px
    height: 320px
    font-size: 11px

@media screen and (min-width: 960px) and (max-width: 1023px)
  #global-container
    width: 960px
    height: 640px
    font-size: 21px

  .fixedSize
    width: 960px !important
    height: 640px !important

