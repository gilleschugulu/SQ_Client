@import 'nib'
@import 'mixins'

.login-page-container
  width: 100%
  height: 100%
  perspective: 1000
  text-align: center
  background-repeat: no-repeat
  background-image: url("../images/login/bg_login.png")
  background-size: 100% 100%
  #flipper
    width: 100%
    height: 100%
    transition: 0.4s
    transform-style: preserve-3d
    relative: top 0 left 0
    &.flipped
      transform: rotateY(180deg)
    .btn-container, #equipe-forms, #temp-form
      backface-visibility: hidden
      absolute: top 0 left 0
    .btn-container
      z-index: 2
      width: 57.189%
      height: 40%
      relative: top 52%
      margin: 0 auto
      .facebook-login, .equipe-login, .temp-login
        display: block
        height: 100%
        background-repeat: no-repeat
        background-size: contain
        margin: 0 auto
      .facebook-login
        width: 100%
        height: 32.8%
        background-image: url("../images/login/connexionfb.png")
      .equipe-login
        width: 83.425%
        height: 32.8%
        margin-top: 9%
        background-image: url("../images/login/compteequipe.png")
      .temp-login
        width: 83.425%
        height: 32.8%
        margin-top: 1%
        background-image: url("../images/login/tempbtn.png")

    #equipe-forms
      background-repeat: no-repeat
      background-image: url("../images/common/background.png")
      background-size: 100% 100%
      transform: rotateY(180deg)
      width: 100%
      height: 100%
      absolute: top 0
      padding-top: 17%
      .invalid
        color: red
        border: 1px solid red

    #equipe-forms, #temp-form
      #close-btn
        cursor: pointer
        width: 4.7%
        height: 10%
        absolute: top 2% left 0.7%
        display: block
        background-repeat: no-repeat
        background-size: contain
        background-image: url(../images/common/close.png)
        &:active
          background-image: url(../images/common/close_a.png)

    #temp-form
      background-repeat: no-repeat
      background-image: url("../images/common/background.png")
      background-size: 100% 100%
      transform: rotateY(180deg)
      width: 100%
      height: 100%
      absolute: top 0
      padding-top: 17%

      #temp-btn
        margin-top 2%