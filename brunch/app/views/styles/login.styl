@import 'nib'
@import 'mixins'

.login-page-container
  width: 100%
  height: 100%
  text-align: center
  background-repeat: no-repeat
  background-image: url("../images/login/background.png")
  background-size: contain
  position: relative
  .fb-reward
    background-image: url('../images/login/150j.png')
    background-size: contain
    background-repeat: no-repeat
    width: 80.3%
    height: 13.9%
    absolute: top 27% left 14%
  .or
    background-image: url('../images/login/ou.png')
    background-repeat: no-repeat
    background-size: contain
    width: 79.2%
    height: 3%
    absolute: top 65% left 11%
  .btn-container
    width: 57.5%
    height: 40%
    relative: top 46%
    margin: 0 auto
    .facebook-login, .email-login
      display: block
      height: 100%
      background-repeat: no-repeat
      background-size: 100% 100%
    .facebook-login
      width: 100%
      height: 32.8%
      background-image: url("../images/login/facebook_login.png")
      margin-bottom: 34%
      &:active
        background-image: url("../images/login/facebook_login_a.png")
    .email-login
      width: 83.6%
      height: 34.4%
      margin-left: 9.2%
      margin-top: -15.6%
      background-image: url("../images/login/mail_login.png")
      &:active
        background-image: url("../images/login/mail_login_a.png")
  #login
    transform: translate(-9999px, 0)
    width: 50%
    height: 50%
    margin: 0 auto
    relative: top 39%
    text-align: center
    &.animated
      transform: translate(0, 0)
    .radio
      text-align: center
      .input
        float: left
        font: 1em dax
        color: #E4E4E4
        stroke: #5325A8
        width: 50%
        input[type=radio]
          margin-bottom: 5%
    #email
      width: 100%
      height: 18.5%
      text-align: center
      border: 3px solid #908f8f
      font-size: 1.3em
      font-style: bold
      border-radius: 5px
    #submit
      background: none
      outline: none
      border: none
      width: 37.291666666667%
      height: 24.0625%
      background-repeat: no-repeat
      background-image: url("../images/login/ok.png")
      background-size: contain
