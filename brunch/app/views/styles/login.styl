@import 'nib'
@import 'mixins'

.login-page-container
  width: 100%
  height: 100%
  text-align: center
  background-repeat: no-repeat
  background-image: url("../images/login/background.png")
  background-size: contain
  position: relative
  .fb-reward
    background-image: url('../images/login/150j.png')
    background-size: contain
    background-repeat: no-repeat
    width: 80.3%
    height: 13.9%
    absolute: top 27% left 14%
  .or
    background-image: url('../images/login/ou.png')
    background-repeat: no-repeat
    background-size: contain
    width: 79.2%
    height: 3%
    absolute: top 65% left 11%
  .invalid
    color: red
    border: 1px solid red
  .btn-container
    width: 57.5%
    height: 40%
    relative: top 27%
    margin: 0 auto
    .facebook-login, .email-login
      display: block
      height: 100%
      background-repeat: no-repeat
      background-size: 100% 100%
    .facebook-login
      width: 100%
      height: 32.8%
      background-image: url("../images/login/facebook_login.png")
      // margin-bottom: 34%
      &:active
        background-image: url("../images/login/facebook_login_a.png")
